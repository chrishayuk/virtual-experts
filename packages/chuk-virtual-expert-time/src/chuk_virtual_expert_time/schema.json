{
  "name": "time",
  "description": "Get current time and perform timezone conversions",
  "operations": {
    "get_time": {
      "description": "Get current time in a timezone",
      "parameters": {
        "timezone": {
          "type": "string",
          "description": "IANA timezone (e.g., 'Asia/Tokyo') or alias (e.g., 'tokyo')",
          "required": false,
          "default": "UTC"
        }
      },
      "examples": [
        {"query": "What time is it?", "params": {"timezone": "UTC"}},
        {"query": "What time is it in Tokyo?", "params": {"timezone": "Asia/Tokyo"}},
        {"query": "Current time in New York", "params": {"timezone": "America/New_York"}}
      ]
    },
    "convert_time": {
      "description": "Convert a time from one timezone to another",
      "parameters": {
        "time": {
          "type": "string",
          "description": "Time to convert (e.g., '3pm', '15:00')",
          "required": true
        },
        "from_timezone": {
          "type": "string",
          "description": "Source timezone",
          "required": true
        },
        "to_timezone": {
          "type": "string",
          "description": "Target timezone",
          "required": true
        }
      },
      "examples": [
        {"query": "Convert 3pm EST to PST", "params": {"time": "3pm", "from_timezone": "America/New_York", "to_timezone": "America/Los_Angeles"}},
        {"query": "What is 9am Tokyo time in London?", "params": {"time": "9am", "from_timezone": "Asia/Tokyo", "to_timezone": "Europe/London"}}
      ]
    },
    "get_timezone_info": {
      "description": "Get information about a timezone",
      "parameters": {
        "location": {
          "type": "string",
          "description": "Location or timezone name",
          "required": true
        }
      },
      "examples": [
        {"query": "What timezone is Sydney in?", "params": {"location": "sydney"}},
        {"query": "Timezone for Dubai", "params": {"location": "dubai"}}
      ]
    }
  }
}

{
  "name": "growth_doubled",
  "description": "Value starts at X, doubles/triples, then adds more",
  "variables": {
    "start": {
      "type": "int",
      "min": 3,
      "max": 20
    },
    "multiplier": {
      "type": "choice",
      "values": [
        2,
        3
      ]
    },
    "extra": {
      "type": "int",
      "min": 2,
      "max": 10
    }
  },
  "trace": [
    {
      "op": "init",
      "var": "start",
      "value": "start"
    },
    {
      "op": "init",
      "var": "multiplier",
      "value": "multiplier"
    },
    {
      "op": "compute",
      "compute_op": "mul",
      "args": [
        "start",
        "multiplier"
      ],
      "var": "step1"
    },
    {
      "op": "init",
      "var": "extra",
      "value": "extra"
    },
    {
      "op": "compute",
      "compute_op": "add",
      "args": [
        "step1",
        "extra"
      ],
      "var": "result"
    },
    {
      "op": "query",
      "var": "result"
    }
  ],
  "answer": "start * multiplier + extra",
  "pattern": "growth_doubled",
  "vocab": {
    "person": {
      "type": "person_with_pronouns"
    },
    "item": {
      "path": "items.countable_singular"
    }
  },
  "template_vars": {
    "name": "person.name",
    "subject": "person.subject",
    "subj": "person.subject|capitalize",
    "his_her": "person.possessive",
    "items": "item|pluralize"
  }
}

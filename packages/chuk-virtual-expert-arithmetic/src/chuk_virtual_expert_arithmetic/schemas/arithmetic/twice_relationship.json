{
  "name": "twice_relationship",
  "description": "A has twice/triple what B has, find A: A = B * multiplier",
  "variables": {
    "base_amount": {
      "type": "int",
      "min": 5,
      "max": 50
    },
    "multiplier": {
      "type": "choice",
      "values": [
        2,
        3,
        4
      ]
    }
  },
  "trace": [
    {
      "op": "init",
      "var": "base",
      "value": "base_amount"
    },
    {
      "op": "init",
      "var": "multiplier",
      "value": "multiplier"
    },
    {
      "op": "compute",
      "compute_op": "mul",
      "args": [
        "base",
        "multiplier"
      ],
      "var": "result"
    },
    {
      "op": "query",
      "var": "result"
    }
  ],
  "answer": "base_amount * multiplier",
  "pattern": "twice_relationship",
  "vocab": {
    "person1": {
      "type": "person_with_pronouns"
    },
    "person2": {
      "type": "person_with_pronouns"
    },
    "item": {
      "path": "items.countable_singular"
    }
  },
  "template_vars": {
    "name1": "person1.name",
    "name2": "person2.name",
    "item_plural": "item|pluralize",
    "mult_word": "twice"
  }
}

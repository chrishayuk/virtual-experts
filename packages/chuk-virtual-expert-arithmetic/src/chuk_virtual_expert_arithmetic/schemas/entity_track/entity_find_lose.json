{
  "name": "entity_find_lose",
  "expert": "entity_track",
  "description": "Entity finds and loses items",
  "pattern": "entity_track",
  "variant": "find_and_lose",
  "vocab": {
    "person": {"type": "person_with_pronouns"},
    "item": {"path": "items.countable_singular"}
  },
  "template_vars": {
    "name": "person.name",
    "subject": "person.subject",
    "subj": "person.subject|capitalize",
    "his_her": "person.possessive",
    "items": "item|pluralize",
    "initial": "start",
    "find_verb": "find",
    "lose_verb": "lose"
  },
  "variables": {
    "start": {
      "type": "int",
      "min": 10,
      "max": 35
    },
    "found": {
      "type": "int",
      "min": 3,
      "max": 12
    },
    "lost": {
      "type": "int",
      "min": 2,
      "max": 8
    }
  },
  "constraints": {
    "start + found - lost": {
      "min": 5
    }
  },
  "trace": [
    {
      "op": "init",
      "var": "items",
      "value": "start"
    },
    {
      "op": "add_entity",
      "entity": "items",
      "amount": "found"
    },
    {
      "op": "consume",
      "entity": "items",
      "amount": "lost"
    },
    {
      "op": "query",
      "var": "items"
    }
  ],
  "answer": "start + found - lost"
}

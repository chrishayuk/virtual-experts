{
  "name": "rate_consumption",
  "expert": "rate_equation",
  "description": "Consumption = rate x time (usage)",
  "pattern": "rate_equation",
  "variant": "consumption_rate",
  "variables": {
    "rate": {"type": "int", "min": 3, "max": 20},
    "time": {"type": "int", "min": 2, "max": 10}
  },
  "vocab": {
    "consumer": {"path": "phrases.consumers"},
    "resource": {"path": "phrases.resources"},
    "time_unit": {"path": "phrases.time_unit_pairs"}
  },
  "template_vars": {
    "a_consumer": "consumer.name|with_article",
    "resource": "resource.name",
    "unit_plural": "resource.unit",
    "time_unit": "time_unit.singular",
    "time_unit_plural": "time_unit.plural"
  },
  "trace": [
    {"op": "init", "var": "rate", "value": "rate"},
    {"op": "init", "var": "time", "value": "time"},
    {"op": "compute", "compute_op": "mul", "args": ["rate", "time"], "var": "result"},
    {"op": "query", "var": "result"}
  ],
  "answer": "rate * time"
}

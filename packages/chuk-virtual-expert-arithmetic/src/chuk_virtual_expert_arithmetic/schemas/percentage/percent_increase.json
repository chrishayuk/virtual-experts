{
  "name": "percent_increase",
  "expert": "percentage",
  "description": "X% increase on a value",
  "pattern": "percentage",
  "variant": "percent_increase",
  "mixins": ["person_vocab"],
  "vocab": {
    "item": {"path": "items.countable_singular"},
    "store_name": {"path": "places.stores"}
  },
  "template_vars": {
    "a_item": "item|with_article",
    "store": "store_name"
  },
  "variables": {
    "base": {
      "type": "int",
      "min": 50,
      "max": 200
    },
    "percent": {
      "type": "choice",
      "options": [
        10,
        15,
        20,
        25,
        50
      ]
    }
  },
  "trace": [
    {
      "op": "init",
      "var": "base",
      "value": "base"
    },
    {
      "op": "init",
      "var": "rate",
      "value": "percent"
    },
    {
      "op": "percent_increase",
      "base": "base",
      "rate": "rate",
      "var": "result"
    },
    {
      "op": "query",
      "var": "result"
    }
  ],
  "answer": "base * (100 + percent) / 100"
}

{
  "name": "construction",
  "description": "Building and construction",
  "agent_types": ["crew", "person"],
  "agent_templates": {
    "crew": {"pattern": "Crew ${letter}", "letters": ["A", "B", "C"]},
    "worker": {"pattern": "Worker ${number}", "numbers": [1, 2, 3]},
    "person": {"source": "names.people", "pattern": "${name}"}
  },
  "items": ["bricks", "tiles", "walls", "square feet", "rooms"],
  "verbs": {"singular": "completes", "plural": "complete"},
  "time_units": [
    {"singular": "hour", "plural": "hours"},
    {"singular": "day", "plural": "days"}
  ]
}

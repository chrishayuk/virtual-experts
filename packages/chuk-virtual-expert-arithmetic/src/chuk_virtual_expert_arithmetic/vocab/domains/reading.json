{
  "name": "reading",
  "description": "Reading and studying",
  "agent_types": ["person"],
  "agent_templates": {
    "person": {"source": "names.people", "pattern": "${name}"},
    "student": {"pattern": "Student ${letter}", "letters": ["A", "B"]}
  },
  "items": [
    {"singular": "page", "plural": "pages"},
    {"singular": "chapter", "plural": "chapters"},
    {"singular": "book", "plural": "books"},
    {"singular": "article", "plural": "articles"},
    {"singular": "problem", "plural": "problems"}
  ],
  "verbs": {"singular": "reads", "plural": "read"},
  "time_units": [
    {"singular": "hour", "plural": "hours"},
    {"singular": "day", "plural": "days"},
    {"singular": "week", "plural": "weeks"}
  ]
}
